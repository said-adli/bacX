{
    "expo": {
        "name": "Brainy",
        "slug": "brainy-mobile",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "scheme": "brainy",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/splash-icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#EFF6FF"
        },
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.brainy.mobile",
            "googleServicesFile": "./GoogleService-Info.plist",
            "infoPlist": {
                "UIBackgroundModes": [
                    "remote-notification"
                ]
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#EFF6FF"
            },
            "package": "com.brainy.mobile",
            "googleServicesFile": "./google-services.json",
            "permissions": [
                "NOTIFICATIONS",
                "VIBRATE"
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "expo-router",
            "@react-native-firebase/app",
            "@react-native-firebase/auth",
            [
                "expo-notifications",
                {
                    "icon": "./assets/notification-icon.png",
                    "color": "#2563EB"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "router": {
                "origin": false
            },
            "eas": {
                "projectId": "your-project-id"
            }
        }
    }
}